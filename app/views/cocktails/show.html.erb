<h2><%= @cocktail.name %></h2>


<h2><% @cocktail.doses.each do |dose| %></h2>
<h2><%= dose.description %></h2>
<h2><%= dose.ingredient.name %></h2>
<h2><%= link_to "Delete doses", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></h2>
<% end %>

<h2>Add new doses per ingredient</h2>
<%= render 'doses/form', dose: @dose, cocktail: @cocktail %>
<%= link_to 'Back', cocktails_path %>


